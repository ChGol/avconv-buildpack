#!/usr/bin/env bash

echo "-----> Installing avconv"
mkdir vendor
echo "dir created"
# download the binary (-O) silently (-s)
curl https://github.com/CrowdDevelopment/avconv-binary/raw/master/avconv.tar.gz -s -O -L
echo "downloaded"
# untar the binary to the directory we want
tar -C vendor -xvf libav-release-64bit-static.tar.xz
echo "untared"
mv ./vendor/libav-12-64bit-static/avconv ./bin/avconv
echo "file moved"
